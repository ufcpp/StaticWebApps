@code {
    [Parameter] public byte[]? InputBinary { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        Change();
    }

    private IReader SelectedLoader { get => _loader!; set { _loader = value; Change(); } }
    private IReader? _loader;

    private void Change()
    {
        (Results, IsBinary) = InputBinary is { } data && _loader is { } loader ? loader.Read(data) : default;
    }

    public IReadOnlyList<Dom.DomSpan>? Results { get; set; }
    public bool IsBinary { get; set; }
